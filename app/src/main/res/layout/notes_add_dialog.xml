        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="?attr/bg"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/heading_bg_dialog"
                android:layout_marginBottom="8dp"
                >
                <TextView
                    android:id="@+id/tvPoem"
                    android:text="@string/add_the_poem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    />

            </FrameLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_margin="5dp"
                android:src="@drawable/iv_add_poem"
                />

            <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etNotesTopic"
        android:layout_margin="5dp"
        android:hint="@string/Topic"
        android:padding="5dp"
        android:textColorHint="?attr/text"
        app:hintTextColor="?attr/text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/idTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="?attr/text"
            android:textColorHint="?attr/text"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>



