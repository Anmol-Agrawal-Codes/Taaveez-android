<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:id="@+id/CVMain"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:strokeWidth="6dp"
    app:strokeColor="@color/black"
    android:backgroundTint="#EBEBEB"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Date"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:textSize="15sp"
            android:id="@+id/tvDate"
            android:gravity="center"
         app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="5dp" />

    <LinearLayout
        android:layout_marginTop="4dp"
        android:id="@+id/llTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llButtons"
            >



    <TextView
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/Topic"
        android:textSize="22sp"
        android:textStyle="bold"
        android:id="@+id/tvtextTopic"
        android:gravity="center"
        />

    </LinearLayout>


        <ImageView
            android:id="@+id/ivStraightLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="image"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            android:src="@drawable/ic_straight_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llTopic"
            app:layout_constraintBottom_toTopOf="@id/llButtons"
            />


    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/ivStraightLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="image"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:scaleType="center"
        android:src="@drawable/ic_action_edit"
        />


        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="image"
            android:foreground="?attr/selectableItemBackground"
            android:scaleType="center"
            android:src="@drawable/ic_share"
            />

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="image"
        android:foreground="?attr/selectableItemBackground"
        android:scaleType="center"
        android:src="@drawable/ic_action_delete"
        />


    </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>